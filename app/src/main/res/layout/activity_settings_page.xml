<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    android:background="#1E3A8A"
    android:orientation="vertical"
    tools:context=".SettingsPage">

<ImageView
android:id="@+id/imageView7"
android:layout_width="match_parent"
android:layout_height="100dp"
android:layout_marginTop="30dp"
android:layout_marginBottom="5dp"
android:layout_gravity="center"
android:background="#1E3A8A"
    app:srcCompat="@drawable/nonprofile" />

<FrameLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:background="#1E3A8A"> <!-- Dark blue -->

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#1E3A8A"
        android:text="Sign in to see deals and Genius discounts,manage your trips,and more"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
</FrameLayout>

    <!-- Sign In Button -->
<Button
android:id="@+id/signInBtn"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"
android:background="#F2C94C"
    android:backgroundTint="#F2C94C"
    android:backgroundTintMode="add"
    android:layout_gravity="center"
    android:text="Sign in"
    android:textColor="#000000" />


<LinearLayout
android:id="@+id/block1"
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="5dp"
android:background="#F8F9FA"
    android:gravity="center_vertical"
    android:orientation="horizontal">

<ImageView
android:id="@+id/icon1"
android:layout_width="50dp"
android:layout_height="20dp"
android:layout_marginRight="10dp"
app:srcCompat="@drawable/icon1" />

<TextView
android:id="@+id/text1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#FFFFFF"
android:text="Sign in or create account"
android:textColor="#000000"
    android:textSize="16sp"
    android:textStyle="bold" />
    </LinearLayout>


<LinearLayout
android:id="@+id/block2"
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_marginTop="5dp"
android:background="#F8F9FA"
android:gravity="center_vertical"
android:orientation="horizontal">

<ImageView
    android:id="@+id/icon2"
    android:layout_width="50dp"
    android:layout_height="20dp"
    android:layout_marginRight="10dp"
    app:srcCompat="@drawable/icon2" />

<TextView
    android:id="@+id/text2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:text="Reviews"
    android:textColor="#000000"
    android:textSize="16sp"
    android:textStyle="bold" />
</LinearLayout>

    <!-- Block 3 -->
