<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="#D1D4E4"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".logoutsettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E3A8A"
            android:layout_margin="10dp"
            android:layout_weight="10"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#1E3A8A"
                app:srcCompat="@drawable/realprofile" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1E3A8A"> <!-- Dark blue -->

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#1E3A8A"
                    android:text="Sara"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </FrameLayout>

            <!-- Sign In Button -->
            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/onbodardButton"
                android:backgroundTintMode="add"
                android:text="Log Out"
                android:textColor="#000000" />


            <LinearLayout
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon1" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Sign in or create account"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/block2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon2" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Reviews"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Block 3 -->
            <LinearLayout
                android:id="@+id/block3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon3" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Questions to properties"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Block 4 -->
            <LinearLayout
                android:id="@+id/block4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Help and support"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Block 5 -->
            <LinearLayout
                android:id="@+id/block5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon4" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Contact Customer Service"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Block 6 -->
            <LinearLayout
                android:id="@+id/block6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon5" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Safety"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Block 7 -->
            <LinearLayout
                android:id="@+id/block7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon7"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon6" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Discover"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Block 8 -->
            <LinearLayout
                android:id="@+id/block8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#F8F9FA"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon8"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/icon7" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="Settings and legal"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            app:srcCompat="@drawable/searchbtn" />

        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"

            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/savebtn" />

        <ImageView
            android:id="@+id/bookingBtn"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/bookingbtn" />

        <ImageView
            android:id="@+id/profBtn"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/profilebtn" />


    </LinearLayout>

</LinearLayout>