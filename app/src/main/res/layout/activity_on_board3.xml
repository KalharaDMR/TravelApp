<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboardbackgroundcolor"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".OnBoard3">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="351dp"
        android:layout_height="390dp"

        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/onboard3img" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Start Exploring"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="Letâ€™s Start your adventure journey"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view14"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/text_secondary" />

        <View
            android:id="@+id/view15"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/text_secondary" />

        <View
            android:id="@+id/view16"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/onbodardButton" />

    </LinearLayout>

    <Button
        android:id="@+id/onBoard3Btn1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="@color/onbodardButton"
        android:text="GET STARTED"
        android:textSize="20sp" />


</LinearLayout>